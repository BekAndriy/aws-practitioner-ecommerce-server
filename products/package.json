{
  "name": "products-service",
  "version": "1.0.0",
  "description": "Products service",
  "main": "index.js",
  "scripts": {
    "build": "npm run build:prod",
    "build:prod": "npm run lint:fix && npm run test && npm run rm:dist && npm run build:code && npm run build:modules",
    "build:modules": "node ./scripts/buildModules",
    "build:code": "tsc -p tsconfig.prod.json",
    "rm:dist": "node -e \"fs.rmSync('./dist', { recursive: true, force: true });\"",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "lint:doc": "swagger-cli validate openapi/openapi.yml",
    "lint:serverless": "sls deploy --noDeploy",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:lambda": "serverless invoke local --function getProductsList",
    "deploy": "sls deploy",
    "deploy:function": "serverless deploy function -f functionName",
    "deploy:doc": "sls s3deploy",
    "deploy:test:data": "npm run deploy:test:products && npm run deploy:test:stocks",
    "deploy:test:products": "aws dynamodb batch-write-item --request-items file://test.products.json",
    "deploy:test:stocks": "aws dynamodb batch-write-item --request-items file://test.stocks.json",
    "remove": "sls remove"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@aws-sdk/client-dynamodb": "^3.423.0",
    "@aws-sdk/client-lambda": "^3.423.0",
    "@aws-sdk/lib-dynamodb": "^3.423.0",
    "@types/aws-lambda": "^8.10.122",
    "@types/jest": "^29.5.5",
    "@types/node": "^20.7.1",
    "@typescript-eslint/eslint-plugin": "^6.7.3",
    "eslint": "^8.50.0",
    "eslint-config-standard-with-typescript": "^39.1.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-n": "^16.1.0",
    "eslint-plugin-promise": "^6.1.1",
    "jest": "^29.7.0",
    "prettier": "^3.0.3",
    "serverless": "^3.35.2",
    "serverless-s3-cleaner": "^2.0.2",
    "serverless-s3-deploy": "^0.10.1",
    "swagger-cli": "^4.0.4",
    "ts-jest": "^29.1.1",
    "ts-loader": "^9.4.4",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "aws-lambda": "^1.0.7",
    "yup": "^1.3.2"
  }
}